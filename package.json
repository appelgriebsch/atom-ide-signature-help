{
  "name": "atom-ide-signature-help",
  "version": "0.1.3",
  "description": "A replacement of the SignatureHelp functionality from the original Atom-IDE / Nuclide package developed by Facebook.",
  "main": "./lib/main.js",
  "keywords": [
    "atom-package",
    "atom-ide",
    "signature-help"
  ],
  "repository": "https://github.com/atom-ide-community/atom-ide-signature-help",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "dompurify": "^1.0.8",
    "etch": "^0.14.0",
    "marked": "^0.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/travis-cli": "^7.5.2",
    "@semantic-release/apm-config": "^6.0.1",
    "@types/atom": "^1.31.1",
    "@types/dompurify": "0.0.32",
    "@types/marked": "^0.6.0",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.21",
    "@types/react-dom": "^16.0.11",
    "atom-languageclient": "^0.9.9",
    "commitlint": "^7.5.2",
    "husky": "^1.3.1",
    "prettier": "1.16.4",
    "semantic-release": "^15.13.3"
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "configSchema": {
    "showSignatureHelpOnTyping": {
      "title": "Flag denotes if the signature help should be shown automatically",
      "description": "If set to true, the signature help is shown as soon as you start typing. Otherwise you will have to activate it via keypress.",
      "type": "boolean",
      "default": true
    }
  },
  "providedServices": {
    "signature-help": {
      "versions": {
        "0.1.0": "provideSignatureHelp"
      }
    }
  }
}
